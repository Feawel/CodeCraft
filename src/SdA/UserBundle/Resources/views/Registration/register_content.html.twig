{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>


<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="pure-form pure-form-aligned">
    <fieldset>
        <div class="pure-control-group">
            {{ form_label(form.username) }}
	        {{ form_errors(form.username) }}
	        {{ form_widget(form.username, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.lastName) }}
	        {{ form_errors(form.lastName) }}
	        {{ form_widget(form.lastName, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.firstName) }}
	        {{ form_errors(form.firstName) }}
	        {{ form_widget(form.firstName, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.age) }}
	        {{ form_errors(form.age) }}
	        {{ form_widget(form.age, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.experience) }}
	        {{ form_errors(form.experience) }}
	        {{ form_widget(form.experience, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.status) }}
	        {{ form_errors(form.status) }}
	        {{ form_widget(form.status, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        <div class="pure-control-group">
            {{ form_label(form.languages) }}
	        {{ form_errors(form.languages) }}
	        {{ form_widget(form.languages, { 'attr': {'style': 'width:250px'} }) }}
        </div>

        {{ form_end(form) }}

            <button type="submit" class="pure-button pure-button-primary">Submit</button>
        </div>
    </fieldset>
</form>